{
  "QueryLanguage": "JSONata",
  "Comment": "A description of my state machine",
  "StartAt": "Run tasks",
  "States": {
    "Run tasks": {
      "Type": "Parallel",
      "Branches": [
        {
          "StartAt": "Add job id and task token to db",
          "States": {
            "Add job id and task token to db": {
              "Type": "Task",
              "Resource": "arn:aws:states:::dynamodb:putItem",
              "Arguments": {
                "TableName": "${__table_name__}",
                "Item": {
                  "id": {
                    "S": "{% $states.input.jobId %}"
                  },
                  "id_type": {
                    "S": "JOB_ID"
                  },
                  "task_token": {
                    "S": "{% $states.input.taskToken %}"
                  }
                }
              },
              "End": true
            }
          }
        },
        {
          "StartAt": "Enable HeartBeat Rule",
          "States": {
            "Enable HeartBeat Rule": {
              "Type": "Task",
              "Arguments": {
                "Name": "${__internal_heartbeat_event_bridge_rule_name__}"
              },
              "Resource": "arn:aws:states:::aws-sdk:eventbridge:enableRule",
              "Retry": [
                {
                  "ErrorEquals": ["EventBridge.InternalException"],
                  "BackoffRate": 2,
                  "IntervalSeconds": 1,
                  "MaxAttempts": 3,
                  "Comment": "Handle internal event bridge exception"
                }
              ],
              "End": true
            }
          }
        }
      ],
      "End": true
    }
  }
}
